<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>
</head>
<body>
    <form action="/user/regist" method="post" onsubmit="return check()">
        <h1>用户注册</h1>
        <p>用户名: <input type="text" name="username" onblur="checkName(this)"><span id="span1"></span></p>
        <p>密码: <input type="password" name="password"><span id="span2"></span></p>
        
        <input type="submit" value="注册">
        <a href="/user/login">已有账号? 点击登录</a>
    </form>

    <script src='/js/jquery.min.js'></script>
    <script>
        var canUse = false;//用户名是否可用
        // 检查用户名是否可用
        function checkName(i){
            var username = $(i).val();
            // 发送Ajax请求判断username是否已经存在
            $.ajax({
                url:'/user/check',
                method:'post',
                data:{username:username},
                success:function(result){
                    if(result.status==0){//用户名可用
                        
                        canUse = true;
                    }else{//用户名已存在
                        canUse = false;
                    }
                    alert(result.msg);
                }
            })
        }

        function check(){
            // 判断用户名是否可用
            if(!canUse){
                alert('用户名已存在,请重新输入');
                return false;
            }
            // 判断密码不能为空
            var password = $('input[name=password]').val().trim();
            if(password == ''){
                alert('密码不能为空');
                return;
            }

        }
    </script>
</body>
</html>